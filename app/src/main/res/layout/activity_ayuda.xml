<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.winuser.discapphelp.ayuda"
    android:background="#c2cefa">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton16"
        android:background="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="@dimen/design_navigation_padding_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Funcionalidad"
            android:id="@+id/textView34"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_above="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:textIsSelectable="false"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2"
            android:background="@drawable/play"
            android:layout_above="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="140dp"
            android:elevation="@dimen/design_navigation_padding_bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ingreso de Datos"
            android:id="@+id/textView35"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_above="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textIsSelectable="false"
            android:gravity="center"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView3"
            android:background="@drawable/play"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="10dp"
            android:elevation="@dimen/design_navigation_padding_bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Configuracon de Celular"
            android:id="@+id/textView36"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_below="@+id/imageView3"
            android:layout_toStartOf="@+id/textView12"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textIsSelectable="false"
            android:gravity="center" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView4"
            android:background="@drawable/play"
            android:layout_below="@+id/textView36"
            android:layout_alignRight="@+id/textView12"
            android:layout_alignEnd="@+id/textView12"
            android:layout_marginLeft="140dp"
            android:elevation="@dimen/design_navigation_padding_bottom" />

    </LinearLayout>

</RelativeLayout>
