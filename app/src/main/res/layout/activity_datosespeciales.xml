<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.winuser.discapphelp.datosespeciales"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false"
    android:background="#c2cefa">

    <TextView
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contacto Emergencia"
        android:id="@+id/textView17"
        android:textColor="#000000"
        android:autoText="true"
        android:textStyle="normal|bold"
        android:textSize="50px"
        android:layout_column="8"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Seguro_IEESS"
            android:id="@+id/textView18"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_below="@+id/textView17"
            android:layout_alignLeft="@+id/editTexSeguro_IESS"
            android:layout_alignStart="@+id/editTexSeguro_IESS"
            android:textIsSelectable="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTexSeguro_IESS"
            android:textColor="#000000"
            android:transitionName="Ingrese el nombre"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView18"
            android:textSize="50px" />

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView19"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_below="@+id/textView17"
            android:layout_alignLeft="@+id/editTexSeguro_IESS"
            android:layout_alignStart="@+id/editTexSeguro_IESS"
            android:text="Contacto de Emergencia" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextContacto_Nombre"
            android:textColor="#000000"
            android:transitionName="Ingrese el nombre"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView18"
            android:textSize="50px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Celular de Contacto"
            android:id="@+id/textView24"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_below="@+id/textView17"
            android:layout_alignLeft="@+id/editTexSeguro_IESS"
            android:layout_alignStart="@+id/editTexSeguro_IESS" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextContactoCelular"
            android:textColor="#000000"
            android:transitionName="Ingrese el nombre"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView18"
            android:layout_gravity="center_horizontal"
            android:textSize="50px"
            android:inputType="number" />


    </LinearLayout>

    <ImageButton
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:id="@+id/imageButtonDatosEspeciales"
        android:background="@drawable/save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
